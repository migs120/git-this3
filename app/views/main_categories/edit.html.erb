 <h1>Edit Main Category</h1>
 
 <div class="row">
   <div class="col-md-4" style="dispay:block;">
     <p>Guidelines : none</p>

   </div>
   <div class="col-md-8">
     <%= form_for @mcategory do |f| %>
       <div class="form-group">
         <%= f.label :title %>
         <%= f.text_field :title, class: 'form-control', placeholder: "Enter post title" %>
       </div>
       <div class="form-group">
         <%= f.label :body %>
         <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter post body" %>
       </div>
       <div class="form-group">
         <%= f.submit "Save", class: 'btn btn-success' %>
         <%= link_to "Delete Category", @mcategory, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this category?' } %> 
       </div>
     <% end %>
   </div>
 </div>
<center style="margin-top:50px; margin-bottom:100px;">
  <h2>Sub Categories Edit</h2>
  <p  style="margin-bottom:50px" ><%=link_to "New sub-category", new_main_category_sub_category_path(@mcategory.id) ,class: 'btn btn-success'%></p>
<%@mcategory.sub_categories.each do |sub|%>
  <p><%=link_to sub.title, edit_main_category_sub_category_path(@mcategory.id, sub.id)   %></p>
  
        <%if sub.avatar.url  %>
             <img src="<%= sub.avatar.url %>"  width="42" height="42"> 
        <%end%>
  <%end%>
  
</center>