
 <h1>Edit Item Picture</h1>
 
 <div class="row">
   <div class="col-md-4" style="dispay:block;">
     <p>Guidelines : none</p>

   </div>
   <div class="col-md-8">
      <%=image_tag(@item_pic.avatar.url)  %>
     <%= form_for [@item, @item_pic] do |f| %>
       <div class="form-group">

     
     <%# image_tag( @item.avatar.url ) %>
        <div class="form-group">
            <%= f.label "Change pic to:" %>
         <%= f.file_field :avatar %>
