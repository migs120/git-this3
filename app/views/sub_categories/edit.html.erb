 <h1>Edit Sub Category</h1>
 
 <div class="row">
   <div class="col-md-4" style="dispay:block;">
     <p>Guidelines : none</p>

   </div>
   <div class="col-md-8">
     <%= form_for [@mcategory, @scategory] do |f| %>
       <div class="form-group">
         <%= f.label :title %>
         <%= f.text_field :title, class: 'form-control', placeholder: "Enter category title" %>
       </div>
       <div class="form-group">
         <%= f.label :body %>
         <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter category body" %>
       </div>
    
     <%= image_tag( @scategory.avatar.url ) %>
        <div class="form-group">
         <%= f.label :avatar %>
         <%= f.file_field :avatar %>
         <%= f.hidden_field :avatar_cache %>
       </div>

       <div class="form-group">
         <%= f.submit "Save", class: 'btn btn-success' %>
         <%= link_to "Delete Category", [@mcategory, @scategory], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this category?' } %> 
       </div>
     <% end %>
   </div>
 </div>
